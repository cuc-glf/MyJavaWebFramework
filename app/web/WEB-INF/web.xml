<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- redirect 404 error to custom Controller -->
    <error-page>
        <error-code>404</error-code>
        <location>/notFound</location>
    </error-page>

    <!-- not authorized, spring security may return this -->
    <error-page>
        <error-code>401</error-code>
        <location>/notLogin</location>
    </error-page>

    <!-- enable spring application context -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- enable spring mvc and have it handle everything -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- control login session timeout -->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>